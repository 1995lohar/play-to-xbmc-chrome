{
    "manifest_version": 2,
    "version": "1.3.0.1",
    "name": "Play to XBMC",
    "description": "Play YouTube, Vimeo, DailyMotion, CollegeHumor, eBaumsWorld and SoundCloud content on your XBMC Player.",
    "options_page": "options.html",
    "permissions": [ "tabs", "http://*/*" ],
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "remote.html"
    },
    "icons": {
        "128": "images/tv.png"
    },
    "background": {
        "scripts": ["js/background_scripts/background.js", "js/xbmc-helper.js", "js/jquery-1.7.2.min.js"]
    }
}
