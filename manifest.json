{
    "manifest_version": 2,
    "version": "1.3",
    "name": "Play to XBMC",
    "description": "Send YouTube, Vimeo or CollegeHumor videos to your XBMC Player.",
    "options_page": "options.html",
    "permissions": [ "tabs", "http://*/*" ],
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "remote.html"
    },
    "content_scripts": [
        {
            "matches": ["http://www.youtube.com/playlist*"],
            "js": ["/js/jquery-1.7.2.min.js", "/js/content_scripts/youtube-playlist-scripts.js"]
        },
        {
            "matches": ["http://www.youtube.com/watch*&list=*"],
            "js": ["/js/jquery-1.7.2.min.js", "/js/content_scripts/youtube-playlist-scripts-2.js"]
        }
    ],
    "icons": {
        "128": "images/tv.png"
    }
}
